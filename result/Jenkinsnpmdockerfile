pipeline {
    agent {
        docker { image 'node:7-alpine' }
    }
    
    stages{
        stage('build'){
		
		when{
            changeset "**/result/**"
          }
		
            steps {
                echo 'building result app'
                dir('result'){
				sh 'npm install'
				}
            }
        
        }
        
         stage('test'){
		 
		 when{
            changeset "**/result/**"
          }
		 
            steps {
                echo 'Testing result app'
                dir('result'){
				sh 'npm test'
				}
            }
        
        }
        
        
        
    }
    
    post {
        always {
            echo 'this CI/CD pipeline result is now completed'
			
        }
        
        
    }
    
}